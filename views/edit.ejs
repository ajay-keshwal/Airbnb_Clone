<% layout("/layout/boiler")%>


<div class="row offset-2 mt-2">
    <h1>Edit Your Listing</h1>
    <div class="col-8">

    <form method="post" novalidate class="needs-validation" action="/listing/<%=data._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        
        
        <div class="mb-3">
            <label for="title">Title</label>
            <input type="text" value="<%=data.title%>"name="listing[title]"  class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
            <label for="Description">Description</label>
            <input type="text" value="<%=data.description%>"name="listing[description]"  class="form-control" required>
            <div class="invalid-feedback">Please enter short decription</div>

        </div>
        <div class="mb-3">
            <img src="<%=originalImg%>" alt="">


        </div>
        <div class="mb-3">
            <label for="Image">Upload new Image</label>
            <input type="file" name="listing[image]"  class="form-control" > 
            
             
        </div>
        
        <div class="mb-3">
            <label for="price">Price</label>
            <input type="number" value="<%=data.price%>"name="listing[price]"  class="form-control" required> 
            <div class="invalid-feedback">Price should be valid </div>

        </div>
        
        
      <div class="row">
        <div class="mb-3 col-md-4">
            <label for="location">Location</label>
            <input type="text" value="<%=data.location%>"name="listing[location]"  class="form-control" required>
            <div class="invalid-feedback">Location name shoud be valid</div>

        </div>
        <div class="mb-3 col-md-8" >
            <label for="country">Country</label>
            <input type="text" value="<%=data.country%>"name="listing[country]" class="form-control" required>
            <div class="invalid-feedback">Country name shoud be valid</div>

        </div>
      </div>
     
        <button class="btn btn-dark">Edit</button>
        </form>
        
    </div>
</div>



